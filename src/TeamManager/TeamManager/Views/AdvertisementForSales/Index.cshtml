@using TeamManager.Core.Entities
@model List<TeamManager.Core.Entities.AdvertisementForSales>

@{
    ViewData["Title"] = "Advertisements for Sales";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    List<GameAccount>? gameAccounts = ViewBag.GameAccounts as List<GameAccount>;
    List<AdvertisementStatus>? advertisementStatuses = ViewBag.AdvertisementStatuses as List<AdvertisementStatus>;

    var currentUserId = ViewBag.CurrentUserId as Guid?; // Assuming you set ViewBag.CurrentUserId in your controller
    var isAdmin = User.IsInRole("Admin");
}

<a href="@Url.Action("Create", "AdvertisementForSales")" class="btn btn-primary float-end">Create New</a>

<h2 class="mt-3 mb-3">@ViewData["Title"]</h2>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card">
                <img src="@item.MainImage" class="card-img-top" alt="Advertisement Image">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Description</p>
                </div>
                <ul class="list-group list-group-flush bg-white">
                    <li class="list-group-item text-dark">Price: @item.Price</li>
                    <li class="list-group-item text-dark">IsActive: @item.IsActive</li>

                    @if (item.gameAccount != null)
                    {
                        <li class="list-group-item text-dark">Game Account: @item.gameAccount.Name</li>
                        @if (item.gameAccount.Games.Any())
                        {
                            <li class="list-group-item text-dark">Games:</li>
                            <ul class="list-group">
                                @foreach (var game in item.gameAccount.Games)
                                {
                                    <li class="list-group-item text-dark">@game.Name</li>
                                }
                            </ul>
                        }
                    }
                    @if (item.advertisementStatus != null)
                    {
                        <li class="list-group-item text-dark">Status: @item.advertisementStatus.Name</li>
                    }

                </ul>

                <div class="card-body">
                    @if (item.userId == currentUserId || isAdmin)
                    {
                        <a href="@Url.Action("Edit", "AdvertisementForSales", new { id = item.Id })" class="card-link btn btn-warning">Edit</a>
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this item?');" class="d-inline">
                            <button type="submit" class="card-link btn btn-danger">Delete</button>
                        </form>
                    }
                    else
                    {
                        <p class="text-muted">You do not have permission to edit or delete this advertisement.</p>
                    }
                </div>
            </div>
        </div>
    }

</div>
