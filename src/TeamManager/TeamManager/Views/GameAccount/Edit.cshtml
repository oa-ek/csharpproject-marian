@model TeamManager.Core.Entities.GameAccount
@{
    ViewData["Title"] = "Edit Game Account";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="accountPlatformId" class="control-label"></label>
        <select asp-for="accountPlatformId" class="form-control" asp-items="ViewBag.Platforms"></select>
        <span asp-validation-for="accountPlatformId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
